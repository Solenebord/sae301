{% extends 'base.html.twig' %}

{% block title %}Validation{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('css/accueil.css') }}" rel="stylesheet" />
    <link href="{{ asset('css/menu.css') }}" rel="stylesheet" />
{% endblock %}

{% block body %}

    <div id="payer">
        <form action="" method="post" name="form_paiement">
            <div id="moyen_paiement">
                <span id="label_radio">Moyen de paiement :</span>
                <input type="radio" id="cb" name="moyen_paie" value="cb" checked>
                <label for="cb">CB</label>

                <input type="radio" id="visa" name="moyen_paie" value="visa">
                <label for="visa">Visa</label>

                <input type="radio" id="paypal" name="moyen_paie" value="paypal">
                <label for="paypal">Paypal</label>
            </div>

            <label for="num_cb">Numéro de la carte</label>
            <input type="text" id="num_cb" name="num_cb" required>

            <label for="exp_cb">Date d'expiration <span id="date_exp">(mm/aa)</span></label>
            <input type="text" id="exp_cb" name="exp_cb" required>

            <label for="crypto_cb">Cryptogramme</label>
            <input type="text" id="crypto_cb" name="crypto_cb" required>
            <span id="help_text">Ce sont les numéros au dos de votre carte</span>

            <label for="proprio_cb">Nom du propriétaire de la carte</label>
            <input type="text" id="proprio_cb" name="proprio_cb" required>

        </form>
    </div>




    <div id="livraison">
        <form action="" method="post" name="form_livraison">

            <label for="livraison_adresse">Adresse de livraison</label>
            <input type="text" id="livraison_adresse" name="livraison_adresse" required>

            <label for="livraison_ville">Ville</label>
            <input type="text" id="livraison_ville" name="livraison_ville" required>

            <label for="livraison_code">Code postal</label>
            <input type="text" id="livraison_code" name="livraison_code" required>
        </form>
    </div>

    <table>
        <thead>
        <tr>
            <th>Qte</th>
            <th>Article</th>
            <th>Prix</th>

        </tr>
        </thead>
        <tbody id="zone">



        </tbody>
        <tfoot><tr><td id="bas" colspan="3"></td><td><span id="total">0</span>€</td></tr></tfoot>
    </table>

    <hr>
    <a class="bouton_secondaire" href="{{ path('app_manif') }}" >Retour</a>
    <form action="{{ path('app_validation') }}" method="post">
        <input type="hidden" name="liste" id="liste">
        <input type="submit" value="Passer au paiement">
    </form>
    <hr>

    <script src="{{ asset('js/scriptgeneral.js') }}"></script>
    <script src="{{ asset('js/scriptvalidation.js') }}"></script>

{% endblock %}